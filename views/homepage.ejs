    <!-- Animal Page Query -->
    <div class="modal fade" id="animalQueryModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="animalQueryModalLabel">Choose An Option</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-column gap-3">
                    <a href="/animals?page=1&limit=3" class="btn btn-primary">View Animals Available For Adoption</a>
                    <a data-bs-target="#animalIntakeModal" data-bs-toggle="modal" data-bs-dismiss="modal" class="btn btn-secondary">Apply To Place An Animal For Adoption</a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
            </div>
        </div>
    </div>

    <!-- Animal Intake Application Modal -->
    <div class="modal fade" id="animalIntakeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Application of Animal Intake</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
                <form action="/pet_intake" method="post" enctype="multipart/form-data">
                    <div class="container">
                        <div class="row m-3 align-items-center">
                            <div class="col">
                                <div>Animal Name: </div>
                            </div>
                            <div class="col">
                                <input type="text" name="animalName" class="form-control" pattern="[A-Za-z]+" required>
                            </div>
                        </div>
                        <div class="row m-3 align-items-center">
                            <div class="col">
                                Animal Age:
                            </div>
                            <div class="col">
                                <div class="input-group mb-3">
                                    <input type="number" class="form-control" name="animalAge" pattern="[0-9]{2}" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                    <span class="input-group-text" id="basic-addon2">years</span>
                                  </div>
                            </div>
                        </div>
                        <div class="row m-3 align-items-center">
                            <div class="col">
                                Animal Gender:
                            </div>
                            <div class="col">
                                <select name="animalGender" class="form-select" required>
                                    <option selected></option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="row m-3 align-items-center">
                            <div class="col">
                                Animal Species:
                            </div>
                            <div class="col">
                                <select name="animalSpecies" class="form-select" required>
                                    <option selected></option>
                                    <option value="Dog">Dog</option>
                                    <option value="Cat">Cat</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="row m-3 align-items-center">
                            <div class="col">
                                Animal Breed:
                            </div>
                            <div class="col">
                                <input type="text" name="animalBreed" pattern="[A-Za-z ]+" class="form-control" required>
                            </div>
                        </div>
                        <div class="row m-3 align-items-center">
                            <div class="col">
                                Animal Reproductive Status:
                            </div>
                            <div class="col">
                                <select name="animalReproduction" class="form-select" required>
                                    <option selected></option>
                                    <option value="Infertile">Infertile (Spayed / Neutered)</option>
                                    <option value="Fertile">Fertile (Unspayed / Not Neutered)</option>
                                    <option value="Unsure">Unsure</option>
                                </select>
                            </div>
                        </div>
                        <div class="row m-3 align-items-center">
                            <div class="col">
                                Animal Weight:
                            </div>
                            <div class="col">
                                <div class="input-group mb-3">
                                    <input type="number" name="animalWeight" class="form-control" pattern="[0-9]{2}" aria-describedby="basic-addon2">
                                    <span class="input-group-text" id="basic-addon2">lbs</span>
                                  </div>
                            </div>
                            <div class="row m-0 my-3 align-items-center">
                                    <textarea name="animalBio" cols="30" rows="5" placeholder="Please let us know anything else you think is relevant to the medical history, temperment, attitude or other characteristics of the animal."></textarea>
                            </div>
                            <div class="row mb-3 align-items-center">
                                <div class="col">
                                    <label for="formFileMultiple" class="form-label">Please include some photos of the animal: </label>
                                    <input class="form-control" type="file" name="formFileMultiple" id="formFileMultiple" multiple>
                                    </div>
                            </div>
                        </div>
                    </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Submit Application</button>
            </div>
        </form>
            </div>
        </div>
    </div>

    <!-- Review Modal -->
    <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Leave a Review</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/reviews/post_review" method="POST">
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <label for="overallExp">How would you rate your overall experience?</label>
                            </div>
                            <div class="col d-flex justify-content-between">
                                <div class="form-check form-check-inline" name="overallExp">
                                    <input class="form-check-input" type="radio" name="overallRating" id="inlineRadio1" value="1">
                                    <label class="form-check-label" for="inlineRadio1">1</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="overallRating" id="inlineRadio2" value="2">
                                    <label class="form-check-label" for="inlineRadio2">2</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="overallRating" id="inlineRadio3" value="3">
                                    <label class="form-check-label" for="inlineRadio3">3</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="overallRating" id="inlineRadio4" value="4">
                                    <label class="form-check-label" for="inlineRadio4">4</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="overallRating" id="inlineRadio5" value="5">
                                    <label class="form-check-label" for="inlineRadio5">5</label>
                                  </div>
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <label for="overallExp">Would you recommend our shelter to a friend?</label>
                            </div>
                            <div class="col d-flex justify-content-between">
                                <div class="form-check form-check-inline" name="recommend">
                                    <input class="form-check-input" type="radio" name="friendRating" id="inlineRadio6" value="1">
                                    <label class="form-check-label" for="inlineRadio6">1</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="friendRating" id="inlineRadio7" value="2">
                                    <label class="form-check-label" for="inlineRadio7">2</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="friendRating" id="inlineRadio8" value="3">
                                    <label class="form-check-label" for="inlineRadio8">3</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="friendRating" id="inlineRadio9" value="4">
                                    <label class="form-check-label" for="inlineRadio9">4</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="friendRating" id="inlineRadio10" value="5">
                                    <label class="form-check-label" for="inlineRadio10">5</label>
                                  </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="my-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Please leave any other comments you'd like to make below.</label>
                                <textarea name="otherComments" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                              </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" type="submit">Submit</button>
                </form>
                </div>
            </div>
    </div>
</body>
</html>