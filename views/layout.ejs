<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/homepage_style.css">
    <title>Aaron's Adoption</title>
</head>
<body>
    <!-- HEADER AREA -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 fixed-top"> 
        <div class="container">

            <a href="/" class="navbar-brand">Aaron's Adoptions</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu"> <span class="navbar-toggler-icon"></span> </button>
            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav d-flex gap-3 ms-auto">
                <% if (user) { %>
                    <li class="nav-item">
                        <a href="/userProfile/<%= user._id %>"><button class="btn btn-outline-secondary text-light" type="button"><%= user.fullName %></button>
                    </li></a>
                    <li class="nav-item">
                        <a href="/logout/"><button class="btn btn-outline-secondary text-light" type="button">Logout</button></a>
                    </li>
                <% } else { %>
                    <li class="nav-item pe-4">
                        <button class="btn btn-outline-secondary text-light" data-bs-target="#loginModal" data-bs-toggle="modal" type="button">Login</button>
                    </li>
                <% } %>
                <% if (user && user.isAdmin) { %> 
                    <li class="nav-item dropdown pe-4">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                          Administrative Actions
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/animals/admin_approval">Approve/Deny Adoption Requests</a></li>
                            <li><a class="dropdown-item" href="/blogs">Manage Blog Posts</a></li>
                          <li><a class="dropdown-item" href="#">Manage User Privileges</a></li>
                        </ul>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <!-- Login modal content-->
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Login</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/loginUser" method="post">
                    <p>We require users to login to continue their adoption process, please enter your login details through the following:</p>
                        <label for="emailInputLogin">Email address</label>
                        <input type="email" class="form-control" id="emailInputLogin" aria-describedby="emailHelp" placeholder="Enter email" name="email" required>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    <div class="form-group">
                        <label for="passwordInputLogin">Password</label>
                        <input type="password" class="form-control" id="passwordInputLogin" placeholder="Password" name="password" required>
                    </div>
            </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
        </div>
    </div>

    <!-- Registration Modal -->
    <div class="modal fade" id="registrationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <!-- Registration modal content-->
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Registration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                <form action="/newUser" method="post">
                    <div class="row">
                        <div class="col-6">
                            <h6>Personal Information</h6>
                            <hr class="w-75">
                            <div class="form-group w-75">
                                <label for="nameInput" style="margin-bottom: 1%;">Full Name</label>
                                <input type="text" class="form-control" id="nameInput" placeholder="Full Name" name="fullName" required>
                            </div>
                            <div class="form-group w-75">
                                <label for="addressInput" style="margin: 1% 0 1% 0;">Address</label>
                                <input type="text" class="form-control" id="addressInput" placeholder="Address" name="address" required>
                            </div>
                            <div class="form-group w-75">
                                <label for="emailInput" style="margin: 1% 0 1% 0;">Email address</label>
                                <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp" placeholder="Enter email" name="email" required>
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group w-75">
                                <label for="passwordInput" style="margin: 1% 0 1% 0;">Password</label>
                                <input type="password" class="form-control" id="passwordInput" placeholder="Password" name="password" required>
                            </div>
                            <div class="form-group w-75">
                                <label for="telephoneInput" style="margin: 1% 0 1% 0;">Phone Number</label>
                                <input type="tel" class="form-control" id="telephoneInput" placeholder="Phone Number" name="phNumber" required>
                            </div>
                            <div class="form-group w-75 pb-3">
                                <label for="ageInput" style="margin: 1% 0 1% 0;">Age</label>
                                <input type="number" class="form-control" id="ageInput" placeholder="Age" name="age" required>
                            </div>
                        </div>
                        <div class="col-6">
                            <h6>Household Information</h6>
                            <hr class="w-75">
                            <div class="form-group w-75">
                                <label for="cityInput" style="margin: 1% 0 1% 0;">City</label>
                                <input type="text" class="form-control" id="cityInput" placeholder="City" name="cityInput" required>
                            </div>
                            <div class="form-group w-75">
                                <label for="sqFootInput" style="margin: 1% 0 1% 0;">Square Feet</label>
                                <input type="number" class="form-control" id="sqFootInput" placeholder="Square Feet" name="sqFootInput" required>
                            </div>
                            <div class="form-group w-75">
                                <label for="childrenInput" style="margin: 1% 0 1% 0;">Children</label>
                                <select class="form-select" name="childrenInput" aria-label="Default select example">
                                    <option selected></option>
                                    <option value="True">Yes</option>
                                    <option value="False">No</option>
                                  </select>
                            </div>
                            <div class="form-group w-75">
                                <label for="outdoorArea" style="margin: 1% 0 1% 0;">Outdoor Area</label>
                                <select class="form-select" id="outdoorArea" name="outdoorArea" onchange="outdoorBool()" aria-label="Default select example">
                                <option selected></option>
                                <option value="True">Yes</option>
                                <option value="False">No</option>
                                </select>
                            </div>
                            <div class="form-group w-75">
                                <label for="fencedArea" style="margin: 1% 0 1% 0;">Fenced Area</label>
                                <select class="form-select" id="fencedArea" name="fencedArea" aria-label="Default select example" disabled>
                                <option selected>No</option>
                                <option value="True">Yes</option>
                                <option value="False">No</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                        </div>
                </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Contact Info Modal (Removed from Nav Bar) -->
    <div class="modal fade" id="contactModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            Contact modal content
            <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Contact Us</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                    <li class="list-group-item">Address: 1 Example Street</li>
                    <li class="list-group-item">Postal Code: A1A 1A1</li>
                    <li class="list-group-item">Phone Number: 709-111-111</li>
                    <li class="list-group-item">Fax: 709-111-1111</li>
                    <li class="list-group-item">Email: info@aaronsadoptions.com</li>
                  </ul>
            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- END OF HEADER-->

    <%- body %>

    <!-- FOOTER AREA -->

    <!-- END OF FOOTER-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

<script>
    function outdoorBool() {
        if ($('#outdoorArea').val() === "True") {
            $('#fencedArea').prop('disabled', false);
        } else {
            $('#fencedArea').val('No');
            $('#fencedArea').prop('disabled', true);
        }
    }
</script>

</html>